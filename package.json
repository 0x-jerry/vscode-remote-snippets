{
  "name": "vscode-remote-snippets",
  "displayName": "Remote Snippets",
  "description": "Auto fetch snippets from remote and load it.",
  "version": "0.3.3",
  "license": "MIT",
  "author": {
    "name": "Jerry wang",
    "email": "x.jerry.wang@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/0x-jerry/vscode-remote-snippets/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0x-jerry/vscode-remote-snippets.git"
  },
  "publisher": "fantasy",
  "engines": {
    "vscode": "^1.41.1"
  },
  "categories": [
    "Snippets"
  ],
  "keywords": [
    "remote",
    "snippets"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "resources/logo.png",
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Remote Snippets",
      "properties": {
        "remote-snippets.snippets": {
          "type": "array",
          "description": "Remote snippets.",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Remote snippet url."
              },
              "language": {
                "type": "string",
                "description": "Specify the language that the snippet applied to."
              }
            }
          }
        },
        "remote-snippets.config": {
          "type": "array",
          "description": "Remote snippets configuration.",
          "items": {
            "type": "string"
          }
        },
        "remote-snippets.js": {
          "type": "array",
          "description": "Those local js file will be loaded dynamically.",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "commands": [
      {
        "command": "remote-snippets.refresh",
        "category": "Remote Snippets",
        "title": "Update snippets"
      }
    ],
    "keybindings": [],
    "viewsContainers": {},
    "views": {},
    "menus": {},
    "grammars": [],
    "snippets": []
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r",
    "vscode:prepublish": "tsup src/extension.ts --sourcemap",
    "build": "tsup src/extension.ts --sourcemap",
    "dev": "tsup src/extension.ts --sourcemap --watch",
    "publish": "vsce publish --no-dependencies",
    "release": "x-release"
  },
  "devDependencies": {
    "@0x-jerry/utils": "^1.16.2",
    "@0x-jerry/x-release": "^0.3.6",
    "@types/debounce": "^1.2.1",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.41.1",
    "@vscode/vsce": "^2.18.0",
    "ajv": "^8.12.0",
    "axios": "^1.3.5",
    "conventional-changelog-cli": "^2.2.2",
    "debounce": "^1.2.1",
    "debug": "^4.3.4",
    "fs-extra": "^11.1.1",
    "https-proxy-agent": "^5.0.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}
